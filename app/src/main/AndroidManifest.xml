<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.readaholic">
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".profile_and_profile_settings.FollowersAndFollowing"
            android:label="@string/title_activity_followers_and_following"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".profile_and_profile_settings.Profile" />
        <activity android:name=".sign_in_up.Start">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sign_in_up.SignIn" />
        <activity android:name=".sign_in_up.SignUp" />
        <activity
            android:name=".Main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".books.BookPageActivity" />
        <activity android:name=".books.BookReviewsActivity" />
        <activity android:name=".books.ReviewActivity"></activity>
    </application>

</manifest>