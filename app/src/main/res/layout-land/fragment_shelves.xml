<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".myshelves.ShelvesFragment">

    <TextView
        android:id="@+id/shelves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="SHELVES"
        android:textColor="@color/brown"
        android:textSize="36sp"
        android:typeface="sans" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/readbooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@drawable/readbooks" />

    <ImageView
        android:id="@+id/cuurentlyreading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@drawable/currentlyreading" />

    <ImageView
        android:id="@+id/wanttoread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="7dp"
        android:src="@drawable/wanttoread" />
</LinearLayout>