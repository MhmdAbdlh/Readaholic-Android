<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:layout_height="wrap_content"
            android:id="@+id/UpdatesActivity_likedpost_LinearLayout"
            android:onClick="salma"
            android:clickable="true">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/UpdatesActivity_profilepicturelikedpost_imageView"
                android:src="@drawable/profileicon"
                android:background="@drawable/circleimage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/UpdatesActivity_namelikedpost_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingLeft="8dp"
                        android:text="Salma"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorUserNameGreen"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="4dp"
                        android:id="@+id/UpdatesActivity_typeofupdatelikedpost_linearlayout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="liked"
                            android:textSize="15sp"
                            android:paddingLeft="2dp"
                            android:id="@+id/UpdatesActivity_typeofupdatelikedpost_textview" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Salma"
                            android:textSize="15sp"
                            android:id="@+id/UpdatesActivity_followernamelikedpost_textview"
                            android:textColor="@color/colorUserNameGreen"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text="'s"
                            android:textSize="15sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/UpdatesActivity_updatetype_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:text="Salma"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorUserNameGreen"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/UpdateActivity_updatedatelikedpost_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingLeft="12dp"
                    android:textSize="12sp"
                    android:text="sat at 8:00AM" />

            </LinearLayout>


        </LinearLayout>

    <TextView
        android:id="@+id/UpdatesActivity_comment_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="6dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/UpdatesActivity_profilepicture_imageView"
                android:src="@drawable/profileicon"
                android:background="@drawable/circleimage" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/UpdatesActivity_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:paddingLeft="8dp"
                        android:text="Salma"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorUserNameGreen"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="4dp"
                        android:id="@+id/UpdatesActivity_typeofupdate_linearlayout">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="rated it"
                            android:paddingLeft="2dp"
                            android:textSize="15sp"
                            android:id="@+id/UpdatesActivity_typeofupdate_textview" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:paddingLeft="6dp"
                            android:paddingTop="3dp"
                            android:stepSize="0.1" />

                        <TextView
                            android:id="@+id/UpdatesActivity_followername_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:paddingLeft="4dp"
                            android:text="Salma"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorUserNameGreen"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/UpdateActivity_updatedate_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:paddingLeft="12dp"
                    android:textSize="12sp"
                    android:text="sat at 8:00AM" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:orientation="horizontal"
            android:id="@+id/UpdateActivity_bookview_linearlayout"
            android:weightSum="1">>

            <ImageView
                android:id="@+id/UpdatesActivity_bookimage_imageview"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:paddingBottom="6dp"
                android:src="@drawable/bookcover" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical"
                android:paddingLeft="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book Title"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"
                    android:textStyle="bold"
                    android:id="@+id/UpdatesActivity_bokkname_textview"
                    android:textColor="@color/colorBookTitle"
                    android:paddingTop="6dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by"
                        android:paddingRight="4dp"
                        android:paddingBottom="6dp"/>

                    <TextView
                        android:id="@+id/UpdateActivity_authorname_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="TextView"
                        android:textColor="@color/colorUserNameGreen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/UpdateActivity_wanttoread_button"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bookbottonshape"
                        android:clickable="true"
                        android:text="Want To Read"
                        android:textColor="@color/colorPrimary" />

                    <Spinner
                        android:id="@+id/activitybook_sheleve_spinner"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_weight="0">

                    </Spinner>

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/UpdatesActivity_reviewinrate_textview"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="6dp">

                    <TextView
                        android:id="@+id/UpdatesActivity_likebutton_textveie"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:onClick="clickLike"
                        android:paddingLeft="24dp"
                        android:text="Like"
                        android:textColor="@color/colorGreen" />

                    <TextView
                        android:id="@+id/UpdatesActivity_commentbutton_textveie"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="Comment"
                        android:textColor="@color/colorGreen" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBackgroundWhite"
                        android:src="@drawable/likeicon" />

                    <TextView
                        android:id="@+id/UpdatesActivity_numberoflikes_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/colorGreen" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/colorBackgroundWhite"
                        android:src="@drawable/commenticon" />

                    <TextView
                        android:id="@+id/UpdatesActivity_numberofcomments_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0"
                        android:textColor="@color/colorGreen" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

</LinearLayout>

