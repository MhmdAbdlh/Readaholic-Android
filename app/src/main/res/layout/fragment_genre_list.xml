<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".explore.GenreList">
    <ProgressBar
        android:id="@+id/GenreFragment_progressBar"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"/>
    <ScrollView
        android:id="@+id/GenreFragment_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/GenreFragment_genreName_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adventure"
                android:paddingTop="30dp"
                android:paddingLeft="15dp"
                android:paddingBottom="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSilver"
                ></View>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorCream"></View>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorSilver"></View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/GenreFragment_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

        </LinearLayout>